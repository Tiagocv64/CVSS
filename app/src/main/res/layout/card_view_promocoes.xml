<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_promocoes_root"
    android:layout_width="match_parent"
    android:background="@android:color/transparent"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_height="200dp"
    android:minHeight="200dp">

    <ImageView
        android:id="@+id/card_view_promocoes_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_white_up_down">
        <TextView
            android:id="@+id/card_view_promocoes_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="left|top"
            android:textColor="@color/card_view_promocoes_text_color"
            android:textSize="34sp"
            android:layout_margin="8dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:background="@drawable/gradient_white_down_up">
        <TextView
            android:id="@+id/card_view_promocoes_description"
            android:layout_width="match_parent"
            android:textColor="@color/card_view_promocoes_text_color"
            android:layout_height="match_parent"
            android:layout_gravity="left|center"
            android:layout_margin="8dp"
            android:textSize="20sp"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>